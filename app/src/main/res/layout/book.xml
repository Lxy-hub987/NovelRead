<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img2"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:background="@color/imgcolor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/bookname"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/img2"
        android:text=""/>
    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:layout_toRightOf="@+id/bookname"
        android:text=""/>
    <TextView
        android:id="@+id/updata"
        android:layout_width="26dp"
        android:layout_height="15dp"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:textColor="@color/white40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/border3"
        android:text="更新"/>
    <LinearLayout
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_below="@+id/bookname"
        android:layout_toRightOf="@+id/img2"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/completeness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ADACAA"
        android:textSize="13dp"
        android:layout_marginLeft="15dp"
        android:text=""/>
    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="#ADACAA"
        android:layout_toRightOf="@+id/completeness"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:textSize="13dp"
        android:text=""/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/img2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_person"/>
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#ADACAA"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/imgp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:text=""/>
    <TextView
        android:id="@+id/uptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/author"
        android:textColor="#ADACAA"
        android:text=""/>
    <TextView
        android:id="@+id/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#ADACAA"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/uptime"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:text=""/>
    <TextView
        android:id="@+id/starturl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/uptime"
        android:text=""/>
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:layout_below="@+id/two"
        android:layout_alignParentRight="true"
        android:textSize="13dp"
        android:text=""/>
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</RelativeLayout>